{%- style -%}
  #SideImageWithText--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }

  .win_sec {
    {% if section.settings.left_image %}
      background: url({{ section.settings.left_image | img_url:'4472x4472' }}) center center no-repeat;
    {% endif %}
    background-size: cover;
  }
{%- endstyle -%}

{% assign animation_anchor = '#SideImageWithText--' | append: section.id %}

<section
  id="SideImageWithText--{{ section.id }}"
  data-aos="hero"
  data-aos-anchor="{{ animation_anchor }}"
  data-aos-order="1"
  class="bootstrapiso win_sec section-padding"
>
  <div class="row g-0">
    <div class="col-md-6">
      <figure class="left_image">
        {% if section.settings.mobile_image %}
          <img
            src="{{ section.settings.mobile_image | img_url:'4472x4472' }}"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="1"
            alt="Image Not Found"
          >
        {% endif %}
      </figure>
    </div>
    <div class="col-md-6">
      <figure class="user_image">
        {% if section.settings.center_image %}
        <img
          src="{{ section.settings.center_image | img_url:'4472x4472' }}"
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="1"
          alt=""
        >
        {% endif %}
      </figure>
      <div class="details">
        <h2
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="1"
        >
          {{ section.settings.red_title }}
        </h2>
        <h3
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="1"
        >
          {{ section.settings.title }}
        </h3>
        {{ section.settings.content }}
        <a
          href="{{ section.settings.link }}"
          class="{{ section.settings.button_style }} {{ section.settings.button_color }} "
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="1"
        >
          {{- section.settings.button_text -}}
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "JOS Side Image With Text",
  "settings": [
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "center_image",
      "label": "Person Image"
    },
    {
      "type": "text",
      "id": "red_title",
      "label": "Red Title",
      "default": "WIN. WIN. WIN"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Great Vegan Footwear Giveaway"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Your chance to win a pair of WESTLAND by Josef Seibel vegan boots.</p>"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "DETAILS"
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Button Color",
      "default": "btn--neutral",
      "options": [
        {
          "value": "btn--primary",
          "label": "Bright accent"
        },
        {
          "value": "btn--secondary",
          "label": "Secondary accent"
        },
        {
          "value": "btn--link",
          "label": "Link color"
        },
        {
          "value": "btn--neutral",
          "label": "Text color"
        },
        {
          "value": "btn--black",
          "label": "Black"
        },
        {
          "value": "btn--white",
          "label": "White"
        }
      ]
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "default": "hero__btn btn btn--large caps",
      "options": [
        {
          "value": "standard__cta caps--large",
          "label": "Capitalized text"
        },
        {
          "value": "hero__btn btn btn--input caps",
          "label": "Small button"
        },
        {
          "value": "hero__btn btn btn--large caps",
          "label": "Large button"
        },
        {
          "value": "hero__btn btn btn--input btn--outline caps",
          "label": "Small outline button"
        },
        {
          "value": "hero__btn btn btn--large btn--outline caps",
          "label": "Large outline button"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "JOS Side Image With Text"
    }
  ]
}
{% endschema %}
