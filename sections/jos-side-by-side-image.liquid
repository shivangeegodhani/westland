{%- style -%}
  #Welcome--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<section id="Welcome--{{ section.id }}" class="bootstrapiso welcome_sec section-padding">

  <div class="row g-12px">
    {% for block in section.blocks %}

      <div class="col-sm-6">
        <a href="{% if block.settings.button_link contains '/collections' %}
                      {{ block.settings.button_link | append: '?filter.v.availability=1' }}
                    {% else %}                                
                      {{ block.settings.button_link }}
                    {% endif %}" class="welcome">
          {% if block.settings.image %}
          <img src="{{ block.settings.image | img_url: '2000x' }}" alt="">
          {% endif %}
          <div class="cap">
            <h3>{{ block.settings.title }}</h3>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
</section>


{% schema %}
{
  "name": "JOS Side-By-Side Images",
  "settings": [
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "name": "Image Block",
      "type": "image-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "JOS Side-By-Side Images"
    }
  ]
}
{% endschema %}
