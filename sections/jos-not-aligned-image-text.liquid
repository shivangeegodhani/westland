{%- style -%}
  #JOSNotAligned--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<section id="JOSNotAligned--{{ section.id }}" class="bootstrapiso perfect_sec section-padding">

    <div class="row g-0">
      <div class="col-lg-6" style="padding-left: 0;padding-right: 0;">
        <figure class="left_image">
          {% if section.settings.left_image %}
            <img src="{{ section.settings.left_image | img_url: "1000x" }}" alt="">
          {% endif %}
        </figure>
      </div>
      <div class="col-lg-6 bg_gray" style="padding-left: 0;padding-right: 0;">
        <div class="details">
          <div class="detai_in">
            <figure class="prod_image">
              {% if section.settings.prod_image %}
                <img src="{{ section.settings.prod_image | img_url: '500x' }}" alt="">
              {% endif %}
            </figure>
            <h3>{{ section.settings.heading }}</h3>
            <p>{{ section.settings.description }}</p>
            <a href="{{ section.settings.link }}" class="{{ section.settings.button_style }} {{ section.settings.button_color }}">{{ section.settings.link_text }}</a>
          </div>
        </div>
      </div>
    </div>
</section>


{% schema %}
{
  "name": "Jos not aligned blocks",
  "settings": [
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "prod_image",
      "label": "Product Image"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Josef seibel"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button Text",
      "default": "Details"
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Color",
      "default": "btn--neutral",
      "options": [
        {
          "value": "btn--primary",
          "label": "Bright accent"
        },
        {
          "value": "btn--secondary",
          "label": "Secondary accent"
        },
        {
          "value": "btn--link",
          "label": "Link color"
        },
        {
          "value": "btn--neutral",
          "label": "Text color"
        },
        {
          "value": "btn--black",
          "label": "Black"
        },
        {
          "value": "btn--white",
          "label": "White"
        }
      ]
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Style",
      "default": "hero__btn btn btn--large caps",
      "options": [
        {
          "value": "standard__cta caps--large",
          "label": "Capitalized text"
        },
        {
          "value": "hero__btn btn btn--input caps",
          "label": "Small button"
        },
        {
          "value": "hero__btn btn btn--large caps",
          "label": "Large button"
        },
        {
          "value": "hero__btn btn btn--input btn--outline caps",
          "label": "Small outline button"
        },
        {
          "value": "hero__btn btn btn--large btn--outline caps",
          "label": "Large outline button"
        }
      ]
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Jos not aligned blocks"
    }
  ]
}
{% endschema %}
