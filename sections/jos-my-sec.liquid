{%- style -%}
  #JOSMySec--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<section id="JOSMySec--{{ section.id }}" class="bootstrapiso my_sec section-padding" style="padding:{{ section.settings.padding }}px">
    <!-- <div class="container">
      <h2 class="clction_title"><span>{{ section.settings.title }}</span></h2>
    </div> -->
    <div class="row g-0 ">
      <div class="col-lg-6">
        <figure class="left_image">
          {% if section.settings.left_image %}
          <img src="{{ section.settings.left_image | img_url: '3000x' }}" alt="">
          {% endif %}
        </figure>
      </div>
      <div class="col-lg-6 align-self-center">
        <figure class="user_image">
          {% if section.settings.user_image%}
            <img src="{{ section.settings.user_image | img_url: '1000x' }}" alt="">
        {% endif %}</figure>
        <div class="details" style="padding:0 !important">
          <figure class="prod_image">
            {% if section.settings.right_image %}
              <img src="{{ section.settings.right_image | img_url: '1000x' }}" alt="">
          {% endif %}</figure>
          <h2 style="text-align:{{ section.settings.h_position }}"><i>{{ section.settings.mainheading }}</i></h2>
          <h3 style="text-align:{{ section.settings.bg_position }}">{{ section.settings.heading }}</h3>
          <hr>
          <p style="text-align:{{ section.settings.description_position }}">{{ section.settings.description }}</p>
          <a href="{%- if section.settings.link contains '/collections' -%}
                      {{- section.settings.link | append: '?filter.v.availability=1' -}}
                    {%- else -%}                                
                      {{- section.settings.link -}}
                    {%- endif -%}"  class="{{ section.settings.button_style }} {{ section.settings.button_color }} text-white">{{ section.settings.link_text }}</a>
        </div>
      </div>
    </div>
</section>


{% schema %}
{
  "name": "Jos My Sec",
  "settings": [
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
