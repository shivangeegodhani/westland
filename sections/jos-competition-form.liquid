{%- style -%}
  #CompetitionsForm--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }
  .btns-disabled{
  background: gray !important;
  cursor: not-allowed;
  }
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
  display: none;
  }

{%- endstyle -%}

{% assign animation_anchor = '#CompetitionsForm--' | append: section.id %}

<section id="CompetitionsForm--{{ section.id }}" class="great_sec section-padding">
  <div class="container">
    <h2
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="1"
    >
      {{ section.settings.title }}
    </h2>
    <div
            class="info"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="2"
    >
      {{ section.settings.description }}
    </div>

    <div class="bootstrapiso form_info">
      {% form 'customer', id: 'competitions-form', class: 'form_info' %}
        <input
                type="text"
                name="contact[note][CompetitionId]"
                value="{{ section.settings.competition_id }}"
                style="display: none"
        >
        {% if form.posted_successfully? %}
          <p class="form-success">
            {{ 'contact.form.post_success' | t }}
          </p>
        {% endif %}

        {% for error in form.errors %}
          <ul class="errors">
            {{ error }}
          </ul>
        {% endfor %}

        <input type="hidden" name="contact[email_origin]" value="{{ page.url }}">
        <input type="hidden" name="contact[email_optin]" value="1">
        <div class="row g-48px">
          <div class="col-md-12">
            <div class="input-group">
              <label
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="2"
              >Name<sup>*</sup></label
              >
              <input
                      type="text"
                      class="form-control"
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="2"
                      name="contact[note][Name]"
                      required
              >
            </div>
          </div>

          <div class="col-md-6">
            <div class="input-group">
              <label
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="2"
              >Email<sup>*</sup></label
              >
              <input
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="2"
                      type="email"
                      class="form-control"
                      name="contact[email]"
                      required
              >
            </div>
          </div>

          <div class="col-md-6">
            <div class="input-group">
              <label
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="2"
              >Contact Number<sup>*</sup></label
              >
              <input
                      data-aos="hero"
                      data-aos-anchor="{{ animation_anchor }}"
                      data-aos-order="2"
                      type="number"
                      class="form-control"
                      name="contact[note][number]"
                      required
              >
            </div>
          </div>
        </div>

        <div class="receive_email">
          <div class="form-check form-check-inline">
            <input
                    data-aos="hero"
                    data-aos-anchor="{{ animation_anchor }}"
                    data-aos-order="2"
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="below"
                    required
            >
            <label
                    data-aos="hero"
                    data-aos-anchor="{{ animation_anchor }}"
                    data-aos-order="2"
                    class="form-check-label"
                    for="below"
                    style="padding-left: 10px"
            >
              {{- section.settings.check_box_msg -}}
            </label>
          </div>
        </div>

        <button
                type="submit"
                data-aos="hero"
                data-aos-anchor="{{ animation_anchor }}"
                data-aos-order="2"
                class="{{ section.settings.button_style }} {{ section.settings.button_color }} "
        >
          {{ section.settings.button_text }}
        </button>
      {% endform %}
    </div>

  </div>
</section>

