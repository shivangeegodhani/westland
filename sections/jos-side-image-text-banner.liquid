{%- style -%}
  #ImageTextBanner--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

{% assign animation_anchor = '#ImageTextBanner--' | append: section.id %}
<section id="ImageTextBanner--{{ section.id }}" class="bootstrapiso win_sec block2 section-padding">
  <div class="row g-0 flex-row-reverse">
    <div class="col-md-6" style="padding:0">
      <figure class="left_image">
        {% if section.settings.left_image %}
        <img
          src="{{ section.settings.left_image | img_url:'4472x4472' }}"
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="2"
          alt="Image Not Found"
        >
        {% endif %}
      </figure>
    </div>
    <div class="col-md-6 align-self-center" style="padding:0">
      <div class="details">
        <figure class="img_top">
          {% if section.settings.icon %}
          <img
            src="{{ section.settings.icon | img_url: '4472x4472' }}"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="2"
            alt="{{ section.settings.icon }}"
          >
          {% endif %}
        </figure>
        <h2
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="2"
        >
          {{ section.settings.red_title }}
        </h2>
        <h3
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="2"
        >
          {{ section.settings.title }}
        </h3>
        {{ section.settings.content }}
        <a
          href="{{ section.settings.link }}"
          data-aos="hero"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-order="2"
          class="{{ section.settings.button_style }} {{ section.settings.button_color }}"
        >
          {{- section.settings.button_text -}}
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "JOS Image Text Banner",
  "settings": [
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "red_title",
      "label": "Red Title",
      "default": "YOUR CHANCE TO BECOME THE 2024 SEIBEL TREKKER"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "An all expenses paid world wide trek writing for our explorer blog and of course wearing the latest range of Josef Seibelâ€™s"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Description",
      "default": "<p>For more details on this once in a lifetime opportunity, click the link below.</p>"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "DETAILS"
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Color",
      "default": "btn--neutral",
      "options": [
        {
          "value": "btn--primary",
          "label": "Bright accent"
        },
        {
          "value": "btn--secondary",
          "label": "Secondary accent"
        },
        {
          "value": "btn--link",
          "label": "Link color"
        },
        {
          "value": "btn--neutral",
          "label": "Text color"
        },
        {
          "value": "btn--black",
          "label": "Black"
        },
        {
          "value": "btn--white",
          "label": "White"
        }
      ]
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Style",
      "default": "hero__btn btn btn--large caps",
      "options": [
        {
          "value": "standard__cta caps--large",
          "label": "Capitalized text"
        },
        {
          "value": "hero__btn btn btn--input caps",
          "label": "Small button"
        },
        {
          "value": "hero__btn btn btn--large caps",
          "label": "Large button"
        },
        {
          "value": "hero__btn btn btn--input btn--outline caps",
          "label": "Small outline button"
        },
        {
          "value": "hero__btn btn btn--large btn--outline caps",
          "label": "Large outline button"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "JOS Image Text Banner"
    }
  ]
}
{% endschema %}
