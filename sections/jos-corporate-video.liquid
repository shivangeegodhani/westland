{%- style -%}
  #CorporateVideo--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<section id="CorporateVideo--{{ section.id }}" class="watch_sec section-padding">
  <div class="container">
    <h2 class="clction_title"><span>{{ section.settings.title }}</span></h2>
  </div>
  <div class="vid_info">
    {% if section.settings.url %}
      <iframe width="100%" height="776" src="{{ section.settings.url }}" title="{{ section.settings.title }}"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen="">
      </iframe>
    {% endif %}
  </div>
</section>


{% schema %}
{
  "name": "JOS Corporate Video",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Watch Our Corporate Video"
    },
    {
      "type": "text",
      "id": "url",
      "label": "Video URL",
      "default": "https://www.youtube.com/embed/AGWpfbuSccE"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "category": "Video",
      "name": "JOS Corporate Video"
    }
  ]
}
{% endschema %}
