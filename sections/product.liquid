<script>
  let imgArr = [];
  let fileUrl = '{{ product.metafields.custom["360_images"] | file_url }}';
  let productHandle = '{{ product.handle | handleize }}';
  // console.log("File url from metafield=",fileUrl);
  // console.log("Product handle=", productHandle);


  //Code to fetch the file from metafield and unzip it
  //console.log("Fetching the file");
  fetch(fileUrl)
  .then(function (response) {
    if (response.status === 200 || response.status === 0) {
      return Promise.resolve(response.blob());
    } else {
      return Promise.reject(new Error(response.statusText));
    }
  })
  .then(function (blob) {
    return JSZip.loadAsync(blob); // return the promise returned by JSZip.loadAsync()
  })
  .then(function (zip) {
    //console.log("unzipping the files");
    return Promise.all(zip.file(/.*/).map(function (file) { // read all files in the zip
      return file.async("base64").then(function (data) {
        imgArr[file.name] = data;
      });
    }));
  })
  .then(function () {
    // code to run after all files are unzipped
    //console.log("All files unzipped!");
    //console.log(imgArr);
    setImageSrc();
  })
  .catch(function (error) {
    console.error("Error unzipping file: ", error);
  });

  function touchMoved(e){
    //console.log("touchMoves");
  }

  //Set the relevant image source for 360 degree video
  function setImageSrc() {
    var imgNo = 1;
    var maximgNo = 36;
    var isClicked = false;
    var interval;

    const video_wrapper = document.getElementById("video__wrapper");
    const btn_play_pause = document.getElementById("btn_play_pause");
    const btn_left = document.getElementById("btn_left");
    const btn_right = document.getElementById("btn_right");
    const btn_close = document.getElementById("btn_close");
    const btn_360_view = document.getElementById("btn_360_view");

    const product__image = document.getElementsByClassName("flickity-viewport")[0];
    const product__thumbnail = document.getElementsByClassName("product__thumbs")[0];
    const product__thumbnail_slider = document.getElementsByClassName("btn-slider")[0];
    const imgDisplay = document.getElementById('imgVideoFrame');
    const range = document.getElementById("range");
    const icon = btn_play_pause.querySelector("i");

    const selectedVariantSpan = document.querySelector('.radio__legend__label > span');

    let selectedVariantColor;
    let selectedVariantImgSelectorUrl;
    let selectedVariantFirstImgUrl;

    selectedVariantImageData();
    checkVariantImageAvailable();

    const observer = new MutationObserver(function(mutations) {
      mutations.forEach(function(mutation) {
        //console.log("interval swatch change =",interval);
        selectedVariantImageData();
        checkVariantImageAvailable();
      });
    });

    observer.observe(selectedVariantSpan, { childList: true });

    function selectedVariantImageData() {
      selectedVariantColor = selectedVariantSpan.textContent;
      selectedVariantImgSelectorUrl = productHandle + '/' + selectedVariantColor + '/img';
      selectedVariantFirstImgUrl = productHandle + '/' + selectedVariantColor + '/img01.jpg';
    }

    function checkVariantImageAvailable() {
      if(imgArr[selectedVariantFirstImgUrl]) {
        //console.log("video available for selected variant");
        initilizeVariantVideoData();
        if(video_wrapper.style.display === "none") {
          btn_360_view.style.display = "block";
        }
      } else {
        //console.log("video unavailable for selected variant");
        btn_close.click();
        btn_360_view.style.display = "none";
        return;   
      }
    }
    
    function initilizeVariantVideoData() {
      let currentImgSrc = 'data:image/png;base64,'+imgArr[selectedVariantFirstImgUrl];
      imgDisplay.style.display = 'block';
      imgDisplay.src = currentImgSrc;
    }
    
    btn_left.addEventListener('click', ()=> {
      if(isClicked) {
        icon.classList.remove('fa-pause');
        icon.classList.add('fa-play');
        stopTimer();
        isClicked = false;
      }
      if(imgNo > 1)
        imgNo = imgNo - 1;
      else
        imgNo = maximgNo;

      currentImgSrc = 'data:image/png;base64,'+imgArr[selectedVariantImgSelectorUrl + pad(imgNo) +'.jpg'];
      imgDisplay.src = currentImgSrc;
    });

    btn_right.addEventListener('click', ()=> {
      if(isClicked) {
        icon.classList.remove('fa-pause');
        icon.classList.add('fa-play');
        stopTimer();
        isClicked = false;
      }
      if(imgNo < maximgNo)
        imgNo = imgNo + 1;
      else
        imgNo = 1;

      currentImgSrc = 'data:image/png;base64,'+imgArr[selectedVariantImgSelectorUrl + pad(imgNo) +'.jpg'];
      imgDisplay.src = currentImgSrc;
    });

    btn_close.addEventListener('click', ()=> {

      if(video_wrapper.style.display !== "none"){
        video_wrapper.style.display = "none";
        product__image.style.display = "block";
        product__thumbnail.style.display = "block";
        stopTimer();
        product__thumbnail_slider.classList.add("thumbnail-slider");
        var element = document.getElementsByClassName("thumbnail-slider")[0];
        element.style.display = "flex";
        btn_360_view.style.display = "block";
        imgNo = 1;
        btn_left.click();
      }
    });

    btn_360_view.addEventListener('click', ()=> {

      if(video_wrapper.style.display === "none") {
        video_wrapper.style.display = "block";
        product__image.style.display = "none";
        product__thumbnail.style.display = "none";
        product__thumbnail_slider.style.display = "none";
        stopTimer();
        icon.classList.remove('fa-pause');
        icon.classList.add('fa-play');
        isClicked = false;
        btn_360_view.style.display = "none";
      }
    });

    btn_play_pause.addEventListener('click', ()=> {
      if(isClicked) {
        icon.classList.remove('fa-pause');
        icon.classList.add('fa-play');
        stopTimer();
        isClicked = false;
      }
      else {
        icon.classList.remove('fa-play');
        icon.classList.add('fa-pause');
        if(interval)
          stopTimer();
        interval = setInterval(imgTimer, 170);
        isClicked = true;
      }
    });

    range.addEventListener('input', (event)=> {
      if(isClicked) {
        icon.classList.remove('fa-pause');
        icon.classList.add('fa-play');
        stopTimer();
        isClicked = false;
      }
      currentImgSrc = 'data:image/png;base64,'+imgArr[selectedVariantImgSelectorUrl + pad(event.target.value) +'.jpg'];
      imgDisplay.src = currentImgSrc;
    });

    function imgTimer() {
      if(imgNo < maximgNo)
        imgNo = imgNo + 1;
      else
        imgNo = 1;

      currentImgSrc = 'data:image/png;base64,'+imgArr[selectedVariantImgSelectorUrl + pad(imgNo) +'.jpg'];
      imgDisplay.src = currentImgSrc;
      //console.log("Curr Img=",interval + '-' + pad(imgNo) + "Color: " + selectedVariantImgSelectorUrl);
    }

    function stopTimer() {
      clearInterval(interval);
    }

    function pad(d) {
      return (d < 10) ? '0' + d.toString() : d.toString();
    }
  }
</script>
