{%- style -%}
  #VeganRange--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<section id="VeganRange--{{ section.id }}" class="watch_sec section-padding season_sec vegan">
    <div class="container">
      <div class="inner">
        <h2>{{ section.settings.title }}</h2>
        <p>{{ section.settings.description }}</p>
        <figure>
          {% if section.settings.image %}
            <img src="{{ section.settings.image | img_url: '1200x' }}" alt="">
          {% endif %}
        </figure>
        <button role="button"  class="{{ section.settings.button_style }} {{ section.settings.button_color }}">{{ section.settings.button_text }}</button>
      </div>
    </div>
</section>


{% schema %}
{
  "name": "JOS Vegan Range",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "The Vegan Range"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "With over 20 different styles to choose from, make an ethical choice with your footware and select the next pair of JOSEF SEIBELS from our Vegan range... "
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Vegan"
    },
    {
      "type": "select",
      "id": "button_color",
      "label": "Color",
      "default": "btn--neutral",
      "options": [
        {
          "value": "btn--primary",
          "label": "Bright accent"
        },
        {
          "value": "btn--secondary",
          "label": "Secondary accent"
        },
        {
          "value": "btn--link",
          "label": "Link color"
        },
        {
          "value": "btn--neutral",
          "label": "Text color"
        },
        {
          "value": "btn--black",
          "label": "Black"
        },
        {
          "value": "btn--white",
          "label": "White"
        }
      ]
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Style",
      "default": "hero__btn btn btn--large caps",
      "options": [
        {
          "value": "standard__cta caps--large",
          "label": "Capitalized text"
        },
        {
          "value": "hero__btn btn btn--input caps",
          "label": "Small button"
        },
        {
          "value": "hero__btn btn btn--large caps",
          "label": "Large button"
        },
        {
          "value": "hero__btn btn btn--input btn--outline caps",
          "label": "Small outline button"
        },
        {
          "value": "hero__btn btn btn--large btn--outline caps",
          "label": "Large outline button"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "JOS Vegan Range"
    }
  ]
}
{% endschema %}
