{%- style -%}
  #TextWithDescription--{{ section.id }} {
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}
<section id="TextWithDescription--{{ section.id }}" class="abt_top section-padding">
  <div class="bootstrapiso">
  <div class="container">
    <h2 style="font-size: {{ section.settings.font_size }}px">{{ section.settings.title }}</h2>
    <p>{{ section.settings.description }}</p>
  </div>
  </div>
</section>

{% schema %}
{
  "name": "Title with description",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Josef seibel group"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 10,
      "max": 60,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 20
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Title with description"
    }
  ]
}
{% endschema %}
