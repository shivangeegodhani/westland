<!-- /snippets/split-hero-image.liquid -->
{% comment %}
  The background image of a split hero section

  Accepts:
  img_object {object} - The Image we will use
  img_ratio {Number} - Use image sizes

  Usage:
  {% render 'split-hero-image', image: section.settings.image %}
{% endcomment %}

<div class="split-hero__box lazy-image" style="background-image:url('{{ image | img_url: '1x1' }}');">
  {%- unless image == blank -%}
    <div class="split-hero__image lazyload fade-in"
      data-bgset="{% render 'bgset', image: image %}"
      data-sizes="auto"
      data-parent-fit="cover"
      style="background-position: {{ bg_position | replace: '-', ' ' }};{% if img_ratio %} --padding-top: {{ img_ratio }};{% endif %}">
    </div>
    <noscript>
      <div class="split-hero__image"
        style="background-image:url('{{ image | image_url: width: 2048 }}'); background-position: {{ bg_position | replace: '-', ' ' }};{% if img_ratio %} --padding-top: {{ img_ratio }};{% endif %}">
      </div>
    </noscript>
  {%- else -%}
    <div class="split-hero__image split-hero__image--onboarding"{% if img_ratio %} style="--padding-top: {{ img_ratio }};"{% endif %}>
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {%- endunless -%}
</div>
